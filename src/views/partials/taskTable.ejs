
<% if(tasks.length >0) { %>
    <div class="card border border-3 ">
        <div class="card-body">
            <table  class="table table-hover">    
                <thead>
                    <tr>
                       
                        <th scope="col">N°</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Opciones</th>
                    </tr>
                    
                </thead>
                <tbody>
                    <% tasks.forEach( task => {  %>
                    <tr>
                        <td> <%=tasks.indexOf(task)%></td>
                        <td><%= task.title %></td>
                        <td> <%= task.description %> </p>
                        <td>
                            <% if(task.done) { %>
                                <a class="btn btn-danger" href="/toggleDone/<%= task._id%> ">No Hecho</a>
                            <%} else {%>
                                <a class="btn btn-success" href="/toggleDone/<%= task._id%> ">Hecho</a>
                           <% }%> 
                            <a class="btn btn-dark" href="/edit/<%=task._id%>">Editar</a>
                            <a class="btn btn-dark" href="/delete/<%=task._id%>">Borrar</a>
                        </td>
                        
                    </tr>
               <% }); %>
                </tbody> 
         
        </table>
        </div>
        </div>
        
<%} else {%>
    <h1 class="text-center">No existen tareas</h1>
    <%}%>

  
        
    
    
    
    
        
       
    